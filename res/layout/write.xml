<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/touch_green"
    >
    <ImageButton
    	android:id="@+id/tagageButton"
    	android:layout_marginTop="25dp"
    	android:layout_centerHorizontal="true"
    	android:background="@drawable/tagage"
		android:layout_width="wrap_content"
    	android:layout_height="wrap_content" 
    	android:onClick="openTagAge"   	
    	/>
    
    <ProgressBar
    	android:indeterminate="true"
    	android:layout_centerInParent="true"
    	android:layout_width="75dp"
    	android:layout_height="75dp"/>
    
    <TextView
    	android:background="@drawable/shape_roundrect"
    	android:layout_alignParentBottom="true"
    	android:layout_marginBottom="50dp"
    	android:layout_centerHorizontal="true"
    	android:text="Touch a tag to\nwrite venue..."
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:textColor="#FFFFFF"
    	android:textSize="18dp"
    	android:textStyle="bold"
    	android:gravity="center_horizontal"
    	/>
</RelativeLayout>
